#!abcip

d(stack="eth:ip4:udp")
c(udp:b=53)

a( pay="|20 8a 01 00 00 01 00 00 00 00 00 00 03|isc" # ............isc
       "|03|org|00 00||02 00 01|")                   # .org.....

b( pay=
    # Plain DNS header
    "|20 8a|" #  id
    "|81 80|" #  flags

    "|00 01|" #  question count
    "|00 01|" #  answer count
    "|00 00|" #  authority count
    "|00 00|" #  additional count

    # Begin DNS Questions
    "|03|isc|03|org|00|" # labels
    "|00 02|" #  qtype [NS]
    "|00 01|" #  qclass [IN]

    # Begin Answers 1
    "|c0 10|"
    "|00 02|"
    "|00 01|"
    "|00 00 0e 10|"
    "|00 0E|"

    # 0x19 points to Answer 1
    # x.y.z -> (unnecessary jump) .123 -> (skip 'isc') .org
    "|01|x"
    "|01|y"
    "|01|z"
    "|c0 2d|" 
    "|03|123|c0 10|"
)

